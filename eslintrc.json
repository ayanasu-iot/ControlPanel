{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "extends": [
    "airbnb",
    "plugin:prettier/recommended",
    "plugin:vue/recommended",
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "plugins": ["vue", "prettier", "prefer-arrow"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "max-len": ["error", { "code": 100 }],
    "prefer-promise-reject-errors": ["off"],
    "no-return-assign": ["off"]
  }
}
